<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_Auto"
    android:background="@drawable/corner1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/auto_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/gmarkgetsansbold"
            android:text="자동제어"
            android:textColor="@color/offColor"
            android:layout_marginBottom="10dp"
            android:textSize="30dp"
            />

        <Switch
            android:id="@+id/auto_sw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:track="@drawable/switch_track_selector"
            android:thumb="@drawable/switch_thumb_selector"
            tools:ignore="InvalidId"
            android:checked="false"
            android:scaleX="1"
            android:scaleY="1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="60dp"
            />
    </LinearLayout>

    <include
        android:id="@+id/led_layout"
        layout="@layout/led_bright_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>


</LinearLayout>