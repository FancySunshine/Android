<?xml version="1.0" encoding="UTF-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TimePicker
            android:id="@+id/res_tp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:timePickerMode="spinner" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름 : "
                android:fontFamily="@font/gmarketsansmedium"
                android:textColor="@color/txtColor"
                android:textSize="30dp" />

            <EditText
                android:id="@+id/res_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gmarketsansmedium"
            android:textColor="@color/txtColor"
            android:text="요일"
            android:textSize="30dp" />


        -

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/res_mbt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:selectionRequired="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/sun"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="일" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/mon"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="월" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tue"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="화" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/wed"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="수" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/thu"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="목" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fri"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="금" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/sat"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="토" />

        </com.google.android.material.button.MaterialButtonToggleGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="메모"
            android:fontFamily="@font/gmarketsansmedium"
            android:textColor="@color/txtColor"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/res_memo"
            android:layout_width="match_parent"
            android:layout_height="100dp" />
        //경계선

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="23dp"
            android:layout_marginBottom="23dp"
            android:background="#666363" />
        //CURTAIN

        -

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">


            -

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="커튼"
                    android:fontFamily="@font/gmarketsansmedium"
                    android:textColor="@color/txtColor"
                    android:textSize="30dp" />

                <Switch
                    android:id="@+id/sw_curtain"
                    android:layout_width="58dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            -

            <LinearLayout
                android:id="@+id/curtain_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.slider.Slider
                    android:id="@+id/sld_step2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:stepSize="1.0"
                    android:valueFrom="0.0"
                    android:valueTo="4.0" />

            </LinearLayout>

        </LinearLayout>
        //경계선

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="23dp"
            android:layout_marginBottom="23dp"
            android:background="#666363" />
        //LED

        -

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">


            -

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gmarketsansmedium"
                    android:textColor="@color/txtColor"
                    android:text="LED"
                    android:textSize="30dp" />

                <Switch
                    android:id="@+id/sw_led"
                    android:layout_width="58dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            -

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/led_layout"
                    layout="@layout/fragment_auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
        //LED layout 끝

        -

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical">

            <Button
                android:id="@+id/res_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="저장"
                android:fontFamily="@font/gmarketsansmedium"
                android:textColor="@color/txtColor2"
                android:textSize="20dp" />

            <Button
                android:id="@+id/res_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="취소"
                android:fontFamily="@font/gmarketsansmedium"
                android:textColor="@color/txtColor2"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>